<script>
  const links = document.querySelectorAll('nav a');

  // Function to update the active link
  function setActiveLink(activeLinkId) {
    links.forEach(link => {
      if (link.id === activeLinkId) {
        link.classList.add('text-rose-500', 'border-b-2', 'border-rose-500');
        link.classList.remove('text-gray-300');
      } else {
        link.classList.remove('text-rose-500', 'border-b-2', 'border-rose-500');
        link.classList.add('text-gray-300');
      }
    });
  }

  // Load the active link from localStorage or set "Sobre mí" as the default
  let activeLinkId = localStorage.getItem('activeLinkId');
  if (!activeLinkId) {
    activeLinkId = 'firstLink'; // Default to "Sobre mí"
  }
  setActiveLink(activeLinkId);

  // Event listeners for each link
  links.forEach(link => {
    link.addEventListener('click', (e) => {
      
      const target = e.target as HTMLElement; // Type assertion
      const targetId = target.id; // Get the ID of the clicked link
      localStorage.setItem('activeLinkId', targetId); // Save the active link ID to localStorage
      setActiveLink(targetId); // Update the active link
    });
  });

  //para slide
  const menuBtn = document.getElementById('menu-btn');
  const sidebar = document.getElementById('sidebar');
  const closeBtn = document.getElementById('close-btn');

  menuBtn.addEventListener('click', () => {
    // Asegúrate de que el sidebar esté visible antes de la animación
    sidebar.classList.remove('hidden');
    setTimeout(() => {
      sidebar.classList.remove('-translate-x-full');
    }, 10); // Pequeño retraso para permitir que la animación se inicie correctamente
  });

  closeBtn.addEventListener('click', () => {
    sidebar.classList.add('-translate-x-full');
    setTimeout(() => {
      sidebar.classList.add('hidden');
    }, 500); // Espera la duración de la animación antes de ocultarlo completamente
  });
</script>
