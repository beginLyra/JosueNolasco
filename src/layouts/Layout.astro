---
interface Props {
	title: string;
}
import Header from '../components/Header.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
</head>

<body class="bg-gray-900 min-h-screen" id="my-section" >
	<div class="grid grid-cols-1 h-screen p-3">
<div class="h-[20%] "><Header/></div>
<div class="h-[80%] ">	<slot /></div>
		
	
	</div>
		

	

</body>
</html>
<script>
	document.addEventListener("DOMContentLoaded", () => {
	  const section = document.getElementById("my-section");
	  section.classList.remove("-translate-x-full", "opacity-0");
	  section.classList.add("translate-x-0", "opacity-100");
	});
  </script>