---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  const cursosEntries = await getCollection('courses');

  const paths = [
    ...projectEntries.map(entry => ({
      params: { slug: entry.slug }, props: { entry },
    })),
    ...cursosEntries.map(entry => ({
      params: { slug: entry.slug }, props: { entry },
    })),
  ];

  return paths;
}

interface Props {
  entry: {
    slug: string;
    data: {
      title: string;
      description: string;
      icon: string;
      img: string;
    };
    render: () => Promise<{ Content: any; headings: any[] }>;
  };
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Layout title={`${entry.data.title} - Josue Nolasco`}>
  <div class="max-w-4xl mx-auto px-4 py-10">
    <div id="animated-section" class="relative overflow-hidden p-6 md:p-10 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 shadow-2xl translate-y-10 transition-all duration-1000 ease-out opacity-0">
      
      <!-- Content -->
      <div class="relative z-10">
        <h1 class="text-4xl md:text-6xl font-extrabold mb-6 text-center bg-gradient-to-r from-rose-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">
          {entry.data.title}
        </h1>
        <p class="text-xl text-gray-400 mb-10 text-center max-w-2xl mx-auto leading-relaxed">
          {entry.data.description}
        </p>

        {headings.length > 0 && (
          <nav class="toc mb-12 bg-white/5 p-6 rounded-xl border border-white/10">
            <h2 class="text-2xl font-bold mb-4 text-rose-400 text-center uppercase tracking-wider">Tabla de contenido</h2>
            <ul class="space-y-3">
              {headings.map((heading) => (
                <li class={`toc-level-${heading.depth} ml-${Math.max(0, (heading.depth - 1) * 4)}`}>
                  <a href={`#${heading.slug}`} class="text-gray-300 hover:text-rose-400 transition-colors duration-300 flex items-center gap-2">
                    <div class="w-1 h-1 bg-rose-500 rounded-full"></div>
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <article class="prose prose-invert lg:prose-xl max-w-none prose-rose prose-headings:text-rose-400 prose-a:text-rose-500 prose-strong:text-white prose-li:text-gray-300">
          <Content />
        </article>

        {entry.data.img && (
          <div class="mt-12 rounded-xl overflow-hidden border border-white/10 shadow-lg group">
            <img src={entry.data.img} alt={entry.data.title} class="w-full h-auto transition-transform duration-700 group-hover:scale-105" />
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('animated-section');
    if (section) {
      setTimeout(() => {
        section.classList.remove('opacity-0', 'translate-y-10');
      }, 100);
    }
  });
</script>

<style is:global>
  /* Personalizaci√≥n extra para el contenido de Markdown */
  .prose h1, .prose h2, .prose h3 {
    @apply font-bold tracking-tight;
    background: linear-gradient(to right, #f43f5e, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .prose p {
    @apply text-gray-300 leading-relaxed;
  }

  .prose code {
    @apply bg-rose-500/10 text-rose-400 px-1.5 py-0.5 rounded border border-rose-500/20 font-mono text-sm;
  }

  .prose pre {
    @apply bg-white/5 border border-white/10 rounded-xl p-4;
  }

  .prose blockquote {
    @apply border-l-4 border-rose-500 bg-rose-500/5 py-2 pl-6 italic text-gray-300 rounded-r-lg;
  }

  .prose a {
    @apply text-rose-500 hover:text-rose-400 underline decoration-rose-500/30 hover:decoration-rose-500 transition-all font-medium;
  }
</style>