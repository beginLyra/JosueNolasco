---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';


import { getCollection } from 'astro:content';
interface Project {
  slug: string;
  data: {
    title: string;
    description: string;
    icon: string;
  };
}
const projects: Project[] = await getCollection('projects');
---
<Layout title={`Josue Nolasco`}>
    <div class="flex flex-col-3 flex-wrap justify-center  translate-y-10 + transition-transform duration-700 " id="animated-section">
        {projects.map((project) => (
          <Card 
            title={project.data.title}
            description={project.data.description}
            icon={project.data.icon}
            href={`/projects/${project.slug}`}
          />
        ))}
    </div>

</Layout>
<script>
	document.addEventListener('DOMContentLoaded', function() {
	  const section = document.getElementById('animated-section');
	  section.classList.remove('opacity-0', 'translate-y-10');
	});
  </script>